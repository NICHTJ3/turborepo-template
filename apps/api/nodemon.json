{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "**/dist/"
  ],
  "verbose": true,
  "execMap": {
    "ts": "node -r esbuild-register ./src/index.ts"
  },
  "watch": [
    "../../packages/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,json"
}
